@page
@using SistemaMercadoLibre.Pages.Controlador
@using SistemaMercadoLibre.Pages.Modelo
@using System.Data
@model SistemaMercadoLibre.Pages.Vista.Cedis.VistaCedisModel
@{
}
@if (Model.errorMessage.Length > 0)
 {
     <br />
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
          <strong>@Model.errorMessage</strong>
          <button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
    </div>

}
@if (Model.successMessage.Length > 0)
 {
      <br />
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
          <strong>@Model.successMessage</strong>
          <button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
    </div>

}
<h2>Cedis</h2>
<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Cedis</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>Lista de Cedis
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-primary" onclick="abrirModal(null)">Crear Nuevo Cedis</button>
            </div>
        </div>
        <hr />
        <table id="tablaCategoria" class="table display cell-boder" style=" width: 100%">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Ubicación</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Ciudad</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cedi in Model.lista)
                {
                    <tr>
                        <td>@cedi.getId()</td>
                        <td>@cedi.getNombre()</td>
                        <td>@cedi.getUbicacion()</td>
                        <td>@cedi.getDireccion()</td>
                        <td>@cedi.getCiudad()</td>
                        <td><button type="button" class="btn btn-primary btn-editar"><i class="fas fa-pen me-1"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Registrar y Modificar -->
<form method="post">
    <div class="modal fade" id="FrmModalCategoria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-sistema text-black">
                    <h5 class="breadcrumb-item" id="lblCategoria" name="lblCategoria">Categoría</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-1">
                        <label for="exampleFormControlInput1" class="form-label">ID</label>
                        <input type="text" class="form-control" id="txtID" name="txtID" readonly="readonly" >
                    </div>
                     <div class="mb-1">
                        <label for="exampleFormControlInput1" class="form-label">Nombre del Cedis:</label>
                        <input type="text" class="form-control" id="txtNombre" name="txtNombre" placeholder="Escribir nombre del cedis">
                    </div>
                    <div class="mb-1">
                        <label for="exampleFormControlInput1" class="form-label">Ubicación:</label>
                        <input type="text" class="form-control" id="txtUbicacion" name="txtUbicacion" placeholder="Escribir ubicación del cedis">
                    </div>
                    <div class="mb-1">
                        <label for="exampleFormControlInput1" class="form-label">Dirección:</label>
                        <input type="text" class="form-control" id="txtDireccion" name="txtDireccion" placeholder="Escribir dirección del cedis">
                    </div>
                    <div class="mb-1">
                        <label for="exampleFormControlInput1" class="form-label">Ciudad:</label>
                        <input type="text" class="form-control" id="txtCiudad" name="txtCiudad" placeholder="Escribir la ciudad del cedis">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" onclick="Guardar()" asp-page-handler="Guardar">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>


@section scripts{
    <script>
    $(document).ready(function(){
            //$(".ocultar").hide();
    });

    var tablaData = $("#tablaCategoria").DataTable({
            responsive: true,
            ordering: true,
            dom: 'Bfrtip',
            "language": {
                url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
            },
            buttons: [
                'copy',
                'print',
                'excel'
            ]
        });

        function abrirModal(json) {

            if (json != null) {
                $('#lblCategoria').text("EDITAR CEDIS");
                $('#txtID').prop('readonly',true);
                $('#txtID').val(json[0]);
                $('#txtNombre').val(json[1]);
                $('#txtUbicacion').val(json[2]);
                $('#txtDireccion').val(json[3]);
                $('#txtCiudad').val(json[4]);
                /*$('#txtDescripcion').prop('readonly',false);//Si Estaba Desactivado. Lo activo
                $('#cboActivo').prop('disabled',false);//Si Estaba Desactivado. Lo activo
                $('#txtID').val(json[0]);
                $('#txtDescripcion').val(json[1]);              
                $('#cboActivo').val(json[3].search("Activo") != -1 ? 1 : 0);*/
            } else {
                $('#lblCategoria').text("REGISTRAR NUEVO CEDIS");
                $('#txtID').val("");
                $('#txtDescripcion').val("");
                $('#txtID').prop('readonly',true);
                $('#cboActivo').prop('disabled',true);
            }

            $("#FrmModalCategoria").modal("show");

        }
        
        function abrirModalBaja(json) {

            if (json != null) {
                $('#txtIdBaja').val(json[0]);
                $('#txtIdBaja').prop('readonly',true);
                $('#txtDescripcionBaja').val(json[1]);
                $('#txtDescripcionBaja').prop('readonly',true);
                $('#cboActivoBaja').val(json[3].search("Activo") != -1 ? 1 : 0);
                $('#cboActivoBaja').prop('disabled',true);
            } 

            $("#FrmModalCategoriaBaja").modal("show");

        }
        $("#tablaCategoria tbody").on("click",'.btn-editar',function(){
	       
            var filaSeleccionada = $(this).closest("tr");
            console.log(tablaData.row(filaSeleccionada).data());
            var data = tablaData.row(filaSeleccionada).data();
            abrirModal(data);
            //alert(filaSeleccionada);
        })

        $("#tablaCategoria tbody").on("click",'.btn-baja',function(){
	       
            var filaSeleccionada = $(this).closest("tr");
            console.log(tablaData.row(filaSeleccionada).data());
            var data = tablaData.row(filaSeleccionada).data();
            abrirModalBaja(data);
            //alert(filaSeleccionada);
        })

        function Guardar() {
            
        }
    </script>

}
