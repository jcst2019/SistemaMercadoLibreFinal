@page
@using SistemaMercadoLibre.Pages.Controlador
@using SistemaMercadoLibre.Pages.Modelo
@using System.Data
@model SistemaMercadoLibre.Pages.Vista.VistaCategoria.CategoriaModel
@{

    List<Categoria> lista = new List<Categoria>();
    lista = GestionCategoria.Listar();
    Console.WriteLine("Lista");
    Console.WriteLine(lista);
}
<br />
<h2>Categoria</h2>

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Categoria</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>Lista de Categorías
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-primary" onclick="abrirModal()">Crear Categoría</button>
            </div>
        </div>
        <hr />
        <table id="tablaCategoria" class="display cell-boder" style=" width: 100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach(var categoria in lista)
                {
                    <tr>
                        <td>@categoria.getId()</td>
                        <td>@categoria.getDescripcion()</td>
                        <td>
                            @if (@categoria.getActivo())
                            {
                                <span class='badge bg-success'>Activo</span>
                            }
                            else{
                                <span class='badge bg-danger'>De Baja</span>
                             }                                                        
                        </td>
                        <td><button type="button" class="btn btn-primary"><i class="fas fa-pen me-1"></i></button>
                            <button type="button" class="btn btn-danger ms-2"><i class="fas fa-trash me-1"></i></button>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FrmModalCategoria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-1">
                    <label for="exampleFormControlInput1" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="txtDescripcion" placeholder="Escribir Descripción">
                </div>
            </div>
            <div class="modal-body">
                <label for="exampleFormControlInput1" class="form-label">Estado</label>
                <select id="cboActivo" class="form-select">
                    <option selected>Activo</option>
                    <option value="1">De Baja</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
    var tablaData = $("#tablaCategoria").DataTable({
            responsive: true,
            ordering: false,
            "language": {
                url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
            },
            "buttons": [
                'copy',
                'print',
                'excel'
            ]
        });

        function abrirModal() {

            $("#FrmModalCategoria").modal("show");

        }

    </script>

}
